            android:name=".activity.physicalexamination.PhysicalExamResultActivity"
            android:label="@string/title_activity_physical_exam_result"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
