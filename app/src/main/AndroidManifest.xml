            android:name=".activity.physicalexamination.PhysicalExamNotPassActivity"
            android:label="@string/title_activity_physical_exam_not_pass"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
