            android:name=".activity.plasmacollection.SelectPlasmaMachineResultActivity"
            android:label="@string/title_activity_pulp_machine_select_result"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <activity
            android:name=".activity.plasmacollection.ChangeDeviceResultActivity"
            android:label="@string/title_activity_change_device_result"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <activity
            android:name=".activity.sensor.FaceCollectionActivity"
            android:label="@string/title_activity_pulp_machine_select_result"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <activity
            android:name=".activity.plasmacollection.ShowDonorInfoActivity"
            android:label="审核结果"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <activity
            android:name=".activity.ServerSettingActivity"
            android:label="审核结果"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />

        <receiver
            android:name=".activity.receiver.BootCompletedReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </receiver>

        <service android:name=".service.TimeService" />

        <activity
            android:name=".activity.DeviceActivity"
            android:label="@string/title_activity_device"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"></activity>
