<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context="com.jiaying.workstation.fragment.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.191" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.618"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_register"
                style="@style/btn_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:text="@string/shuasfz" />
            <Button
                android:layout_marginTop="@dimen/btn_margin_large"
                android:id="@+id/btn_finger"
                style="@style/btn_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:text="刷指纹" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/btn_margin_large"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/btn_idcard_forget"
                    style="@style/btn_style2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/btn_padding"
                    android:layout_weight="1"
                    android:text="@string/idcard_forget_take" />

                <Button
                    android:id="@+id/btn_idcard_broken"
                    style="@style/btn_style2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/idcard_broken" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.191" />
    </LinearLayout>
</LinearLayout>
