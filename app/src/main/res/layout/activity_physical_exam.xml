<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg"
    android:orientation="vertical"
    tools:context=".activity.physicalexamination.PhysicalExamActivity">

    <include layout="@layout/comm_app_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/head_image"
            android:layout_width="@dimen/head_size"
            android:layout_height="@dimen/head_size"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/btn_padding"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_norse" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_txt"
                style="@style/txt_black_style"
                android:text="姓名" />

            <TextView
                android:id="@+id/id_txt"
                style="@style/txt_grey_small_style"
                android:layout_marginTop="@dimen/btn_padding"
                android:text="证件号：5112011970****9956" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/btn_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.191" />

            <Button
                android:id="@+id/ask_btn"
                style="@style/btn_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.618"
                android:text="询问" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.191" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="@dimen/btn_margin"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.191" />

            <Button
                android:id="@+id/check_btn"
                style="@style/btn_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.618"
                android:text="体格检查" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.191" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="@dimen/btn_margin"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.191" />


            <Button
                style="@style/btn_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="保存到服务器" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.018" />

            <Button
                android:id="@+id/submit_btn"
                style="@style/btn_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="提交审核" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.191" />

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/copyright_view" />
</LinearLayout>
