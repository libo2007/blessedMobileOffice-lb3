<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg"
    android:orientation="vertical"
    tools:context=".activity.sensor.FingerprintActivity">

    <include layout="@layout/comm_app_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/head_image"
            android:layout_width="@dimen/head_size"
            android:layout_height="@dimen/head_size"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/btn_padding"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_norse" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_txt"
                style="@style/txt_black_style"
                android:text="姓名" />

            <TextView
                android:id="@+id/id_txt"
                style="@style/txt_grey_small_style"
                android:layout_marginTop="@dimen/btn_padding"
                android:text="证件号：5112011970****9956" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/txt_black_style"
                android:gravity="center"
                android:id="@+id/state_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.191" />

            <ImageView
                android:id="@+id/photo_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.618"
                android:scaleType="fitCenter"
                android:src="@mipmap/finger_print" />
            <TextView
                style="@style/txt_black_style"
                android:gravity="center"
                android:id="@+id/result_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.191" />
        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/copyright_view" />
</LinearLayout>
