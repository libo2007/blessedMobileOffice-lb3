<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg"
    android:orientation="vertical"
    tools:context=".activity.sensor.FingerprintActivity">

    <include layout="@layout/comm_app_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/state_txt"
            style="@style/txt_black_style"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.191" />

        <ImageView
            android:id="@+id/photo_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.610"
            android:scaleType="fitCenter"
            android:src="@mipmap/identity_card" />

        <TextView
            style="@style/txt_black_style"
            android:gravity="center"
            android:id="@+id/result_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.191" />
    </LinearLayout>


    <include layout="@layout/copyright_view" />
</LinearLayout>
